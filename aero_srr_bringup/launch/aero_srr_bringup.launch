<launch>
  <!-- ********************ARGUMENTS******************** -->
  <arg name="aero/imu_topic"              value="aero/imu"/>
  <arg name="aero/odom_topic"             value="aero/odom"/>
  <arg name="aero/odom_topic_ekf"         value="aero/odom_ekf"/>
  <arg name="aero/velocity_command_topic" value="aero/base/cmd_vel"/>
	
  <include file="$(find aero_srr_bringup)/launch/srr_bringup.launch">
    <arg name="aero/platform"      		    value="1" />
    <arg name="aero/velocity_command_topic"	    value="$(arg aero/velocity_command_topic)" />
  </include>

  <include file="$(find aero_base)/launch/aero_base.launch">
    <arg name="imu_topic"              value="$(arg aero/imu_topic)" />
    <arg name="odom_topic"             value="$(arg aero/odom_topic)" />
    <arg name="velocity_command_topic" value="$(arg aero/velocity_command_topic)" />
  </include> 
  
  <include file="$(find aero_srr_bringup)/launch/aero_srr_laser.launch">
  </include>  
  
  <include file="$(find aero_srr_bringup)/launch/aero_srr_odometry.launch">
    <arg name="imu_topic"    value="$(arg aero/imu_topic)" />
    <arg name="odom_topic"   value="$(arg aero/odom_topic)" />
    <arg name="output_topic" value="$(arg aero/odom_topic_ekf)" />
  </include>
</launch>
